<%if career_snapshots.present? %>
  <section class="section">
    <div class="container">
      <div class="row justify-content-around">
        <div class="col-lg-12 text-center">
          <h2 class="section-title">Experience</h2>
        </div>
        <% career_snapshots.each do |snapshot|%>
          <div class="col-lg-3 col-md-4 text-center">
            <%= image_tag snapshot.logo %>
            <p class="mb-0"><%= print_employment_tenure(snapshot)%></p>
            <h4><%=snapshot.designation%></h4>
            <h6 class="text-light"><%=snapshot.company_name%><i> <%=snapshot.location%></i></h6>
          </div>
        <% end %>
      </div>
    </div>
  </section>
<% end %>
