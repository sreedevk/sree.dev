<section class="hero-area bg-primary" id="parallax">
  <div class="container">
    <div class="row">
      <div class="col-lg-11 mx-auto">
        <h1 class="text-white font-tertiary" style="top: -0px;">
          <%= profile_settings[:first_name]&.upcase %><br><%= profile_settings[:last_name]&.upcase %><br>
          <small style="font-size: 25px; margin-top: -15px;">
            <%= profile_settings[:title] %>
          </small>
        </h1>

      </div>
    </div>
  </div>
  <div class="layer-bg w-100">
    <%= image_tag "illustrations/leaf-bg.png", class: 'img-fluid w-100'%>
  </div>
  <div class="layer" id="l2">
    <%= image_tag "illustrations/dots-cyan.png" %>
  </div>
  <div class="layer" id="l3">
    <%= image_tag "illustrations/leaf-orange.png" %>
  </div>
  <div class="layer" id="l4">
    <%= image_tag "illustrations/dots-orange.png" %>
  </div>
  <div class="layer" id="l5">
    <%= image_tag "illustrations/leaf-yellow.png" %>
  </div>
  <div class="layer" id="l6">
    <%= image_tag "illustrations/leaf-cyan.png" %>
  </div>
  <div class="layer" id="l7">
    <%= image_tag "illustrations/dots-group-orange.png" %>
  </div>
  <div class="layer" id="l8">
    <%= image_tag "illustrations/leaf-pink-round.png" %>
  </div>
  <div class="layer" id="l9">
    <%= image_tag "illustrations/leaf-cyan-2.png" %>
  </div>
  <!-- social icon -->
  <%= render partial: 'social'%> 
  <!-- /social icon -->
</section>
